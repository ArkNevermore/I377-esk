<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
<persistence-unit name="persistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>main.entities.AdminAlluvus</class>
        <class>main.entities.Amet</class>
        <class>main.entities.AmetPiiripunkti</class>
        <class>main.entities.AmetVaeosa</class>
        <class>main.entities.Auaste</class>
        <class>main.entities.AuastmeMuutumine</class>
        <class>main.entities.IntsidendiLiik</class>
        <class>main.entities.Intsident</class>
        <class>main.entities.IsikuSeadusIntsidendi</class>
        <class>main.entities.IsikIntsidendi</class>
        <class>main.entities.Kodakondsus</class>
        <class>main.entities.KontaktiLiik</class>
        <class>main.entities.Objekt</class>
        <class>main.entities.ObjektiLiik</class>
        <class>main.entities.ObjektiSeadusIntsidendi</class>
        <class>main.entities.ObjektIntsidendi</class>
        <class>main.entities.OrgYksus</class>
        <class>main.entities.PiiriloiguHaldaja</class>
        <class>main.entities.Piiriloik</class>
        <class>main.entities.Piiripunkt</class>
        <class>main.entities.PiiripunktiAlluvus</class>
        <class>main.entities.PiiripunktiOrgYksus</class>
        <class>main.entities.Piiririkkuja</class>
        <class>main.entities.Piirivalvur</class>
        <class>main.entities.PiirivalvuriKontakt</class>
        <class>main.entities.PiirivalvuriSeadusIntsidendi</class>
        <class>main.entities.PiirivalvurIntsidendi</class>
        <class>main.entities.PiirivalvurPiiripunkti</class>
        <class>main.entities.PiirivalvurVaeosa</class>
        <class>main.entities.PiirivalvurVodikohal</class>
        <class>main.entities.RiigiAdminYksus</class>
        <class>main.entities.RiigiAdminYksuseLiik</class>
        <class>main.entities.Riik</class>
        <class>main.entities.Ruumiyksus</class>
        <class>main.entities.RuumiyksuseLiik</class>
        <class>main.entities.Seadus</class>
        <class>main.entities.SeadusePunkt</class>
        <class>main.entities.SeotudKontaktisik</class>
        <class>main.entities.SuguluseRolliLiik</class>
        <class>main.entities.Vaeosa</class>
        <class>main.entities.VaeosaAlluvus</class>
        <class>main.entities.Vahtkond</class>
        <class>main.entities.VahtkondIntsidendi</class>
        <class>main.entities.VahtkonnaLiige</class>
        <class>main.entities.VahtkonndPiiriloigul</class>
        <class>main.entities.VoimalikAlluvus</class>
        <class>main.entities.Voodikoht</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <!-- value="create" to build a new database on each run; value="update" to modify an existing database; value="create-drop" means the same as "create" but also drops tables when Hibernate closes; value="validate" makes no changes to the database -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy"/>
            <property name="hibernate.connection.charSet" value="UTF-8"/>
            <!-- Uncomment the following two properties for JBoss only -->
            <!-- property name="hibernate.validator.apply_to_ddl" value="false" /-->
            <!-- property name="hibernate.validator.autoregister_listeners" value="false" /-->
        </properties>
    </persistence-unit>
</persistence>
